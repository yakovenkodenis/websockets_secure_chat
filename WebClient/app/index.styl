gutter = 15px
b-line-height = 38px

*
    margin 0
    padding 0
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box

body
    background #fff

.input-form
    width 500px
    border 1px solid gray
    -webkit-border-radius 2px
    border-radius 2px
    overflow hidden
    margin 25px auto

    &--container
        padding gutter

    &--wrapper
        width 100%
        height 50px

        textarea
            width 100%
            height 100%
            padding 0
            border none
            resize none

            &:focus
                outline none

.control-group
    border-top 1px solid gray

    &--btn
        height b-line-height
        padding 0 2 * gutter
        border 0
        background-color whitesmoke
        border-right 1px solid gray
        cursor pointer

        &:focus
            outline none

        &:hover,
        &:active
            background-color #3b5998
            color white


.chat-window
    height 400px
    overflow-y auto

ul.chat-log
    list-style none

.chat-log
    max-width 20em
    margin 0 auto

    .chat-log__entry
        margin .5em

.chat-log__entry
    display flex
    -webkit-flex-direction row
    -ms-flex-direction row
    flex-direction row
    -webkit-align-items flex-end
    align-items flex-end
    max-width 100%

    &.chat-log__entry_mine
        -webkit-flex-direction row-reverse
        -ms-flex-direction row-reverse
        flex-direction row-reverse

        .chat-log__avatar
            display none

        .chat-log__message
            border-top 1px solid #07f
            border-bottom 1px solid #07f
            background-color #08f
            color #fff

            &::before
                right -12px
                bottom 0.6em
                left auto
                border 6px solid transparent
                border-left-color #08f

    .chat-log__message
        position relative
        margin 0 12px

        &::before
            position absolute
            right auto
            bottom 0.6em
            left -12px
            height 0
            content ''
            border 6px solid transparent
            border-right-color #ddd
            z-index 2

.chat-log__avatar
    -webkit-flex-shrink 0
    flex-shrink 0
    -webkit-flex-grow 0
    flex-grow 0
    z-index 1
    height 50px
    width 50px
    -webkit-border-radius 25px
    border-radius 25px

.chat-log__message
    background-color #ddd
    padding .5em
    -webkit-border-radius 4px
    border-radius 4px
    font-weight lighter
    max-width 70%

    .chat-log__timestamp
        display none
